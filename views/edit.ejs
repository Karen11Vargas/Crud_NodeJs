       <div class="container col-6">
    <% if(users) { %>
        <form action="/edit" method="POST">
            <H2>Actualizar</H2>
            <input type="text" class="form-control" id="id" name="id" value="<%= users.id %>" hidden>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="usuario" name="usuario" value="<%= users.usuario %>">
                <label for="floatingInput">Usuario</label>
            </div>
            <div class="form-floating">
                <select class="form-select" id="rol" name="rol" aria-label="Floating label select example">
                    <option selected>Selecciona el rol</option>
                    <option <%= users.rol =='Admin' ? "selected" : "" %> value="Admin">Admin</option>
                    <option <%= users.rol =='Usuario' ? "selected" : "" %> value="Usuario">Usuario</option>
                </select>
                <label for="floatingSelect">Rol</label>
            </div>
            <button type="submit" class="btn btn-primary m-2">Actualizar Usuario</button>
        </form>
        <% } %>
    </div>
  </body>
